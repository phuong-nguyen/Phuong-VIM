[user]
  name = Phuong Nguyen
  email = phuongnd08@gmail.com
[alias]
  ci = commit
  co = checkout
  st = status --short
  lg = log --oneline --decorate -n 20
  wd = diff --word-diff
  wdc = diff --word-diff --cached
  dc = diff --cached
[github]
  user = phuongnd08
[color]
  diff = auto
  status = auto
[color "status"]
  changed = yellow
  added = green
  untracked = red
[diff]
  tool = diffmerge
[difftool "diffmerge"]
  cmd = diffmerge \"$LOCAL\" \"$REMOTE\"
[mergetool "diffmerge"]
  trustexitcode = false
  cmd = diffmerge --merge --result=$MERGED $LOCAL $BASE $REMOTE
[merge]
  tool = diffmerge
[mergetool]
  keepBackup = false
[core]
  editor = /usr/bin/vim
